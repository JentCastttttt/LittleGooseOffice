<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.account.analysis.AccountAnalysisActivity">

    <little.goose.account.ui.widget.actionbar.NormalActionBar
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary_color"
        app:titleText="@string/statistics" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_analysis"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <little.goose.account.ui.widget.selector.BottomTimeTypeSelector
        android:id="@+id/time_type_selector"
        android:layout_width="match_parent"
        android:layout_height="66dp" />

</LinearLayout>